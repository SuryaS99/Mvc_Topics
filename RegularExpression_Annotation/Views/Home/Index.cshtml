    <p>@Html.LabelFor(model => model.EmployeePassword) &nbsp; @Html.TextBoxFor(model => model.EmployeePassword, "", new { @class = "form-control" }) @Html.ValidationMessageFor(model => model.EmployeePassword, "", new { @class = "text-danger" })</p>

