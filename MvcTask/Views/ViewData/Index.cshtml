
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>@ViewData["Message"]</p>
<h5>@ViewData["CurrentTime"]</h5>

<ul>
    @{
        foreach (string i in (string[])ViewData["fruitArray"])
        {
            <li>@i</li>
        }
    }
</ul>

<ul>
    @{
        foreach (string i in (List<string>)ViewData["SportsList"])
        {
            <li>@i</li>
        }
    }
</ul>

@{
    var a = (MvcTask.Models.Employee)ViewData["Employee"];
}

<p>@a.EmpId</p>
<p>@a.EmpName</p>
<p>@a.EmpDesignation</p>
